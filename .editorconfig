root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,csx}]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.{xml,csproj,props,targets}]
indent_size = 2

[*.sln]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
